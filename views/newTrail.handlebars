<div class="columns is-centered">
    <div class="column is-6">
        <h2 class="page-title has-text-weight-bold mb-3" id="typeColor">Add a new hiking trail</h2>
        <form class="form new-trail-form">
            <div class="field">
                <label for="form">Trail Name</label>
                <input class="input is-info is-rounded" type="text" id="trailName" placeholder="Enter trail name" />
            </div>
            <div class="field">
                <label for="label">Trailhead Location</label>
                <input class="input is-info is-rounded" type="text" id="location"
                    placeholder="Enter trailhead location" />
            </div>
            <div class="field">
                <label for="label">Trail Length</label>
                <input class="input is-info is-rounded" type="text" id="trailLength"
                    placeholder="Enter hiking trail distance in miles" />
            </div>
            <div class="field">
                <label for="label">Elevation</label>
                <input class="input is-info is-rounded" type="text" id="elevation"
                    placeholder="Enter hiking trail elevation change in feet" />
            </div>
            <div class="field">
                <label class="label" id="typeColor">Difficulty Level</label>
                <div class="select is-rounded">
                    <div class="control">
                        <select id="difficulty">
                            <option value="" disabled selected>Select difficulty rating</option>
                            <option>Easy</option>
                            <option>Medium</option>
                            <option>Hard</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field">
                <button class="button" id="submit" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/newTrail.js"></script>